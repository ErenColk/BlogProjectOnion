
@{
    ViewData["Title"] = "DeletePost";
}
@model ResultPostDTO

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">MAKALE SİLME </h4>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Silmek İstediğine Emin Misin ?</div>
                    </div>
                    <table class="table mt-4">
                        <tbody>
                            <tr>
                                <td><strong>Makale Başlığı :</strong></td>
                                <td>@Model.Title</td>
                            </tr>
                            <tr>
                                <td><strong>Durumu :</strong></td>
                                <td>@GetEnumDescription.Description(@Model.Status)</td>
                            </tr>
                            <tr>
                                <td><strong>Oluşturulma Tarihi :</strong></td>
                                <td>@Model.CreatedDate.ToShortDateString()</td>
                            </tr>
                            @if (Model.UpdatedDate.Year != 0001)
                            {
                                <tr>
                                    <td><strong>Güncellenme Tarihi :</strong></td>
                                    <td>@Model.UpdatedDate.ToShortDateString()</td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td><strong>Güncellenme Tarihi :</strong></td>
                                    <td>Güncelleme Yapılmadı</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="mt-2" style="margin-left:10px;margin-bottom: 10px">
                        <a href="/Admin/Post/HardDeletePost/@Model.Id" class="btn btn-outline-danger mr-2">Sil</a>
                        <a href="/Admin/Post/PostList" class="btn btn-outline-success">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


