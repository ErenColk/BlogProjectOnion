
@{
    ViewData["Title"] = "HardDeletePost";
}


@model ResultPostDTO
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">MAKALE SİLME BAŞARILI</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Silme İşlemi Başarıyla Tamamlandı</div>
                    </div>
                    <div class="card-body">
                        <p>Makale başarıyla silindi.</p>
                        <p><strong>Silinen Makale:</strong> @Model.Title</p>
                        <p><strong>Silme Tarihi:</strong> @DateTime.Now.ToShortDateString()</p>
                        <a href="/Admin/Post/PostList" class="btn btn-outline-success">Ana Sayfaya Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
