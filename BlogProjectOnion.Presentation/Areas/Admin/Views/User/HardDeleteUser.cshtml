@using BlogProjectOnion.Domain.Entities

@{
    ViewData["Title"] = "HardDeleteUser";
}

@model AppUser

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">ÜYE SİLME BAŞARILI</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Silme İşlemi Başarıyla Tamamlandı</div>
                    </div>
                    <div class="card-body">
                        <p>Üye başarıyla silindi.</p>
                        <p><strong>Silinen Üye:</strong> @Model.FirstName  @Model.LastName</p>
                        <p><strong>Silme Tarihi:</strong> @DateTime.Now.ToShortDateString()</p>
                        <a href="/Admin/User/UserList" class="btn btn-outline-success">Ana Sayfaya Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>