@{
    ViewData["Title"] = "DetailAuthorList";
}

@model AuthorDetailVM

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">YAZARLAR</h4>
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yazar İşlemleri</div>
                    </div>
                    <table class="table">
                        <tr>
                            <td scope="col">ID: </td>
                            <td>@Model.Id</td>

                        </tr>
                        <tr>
                            <td scope="col">Yazar Ad Soyad:</td>
                            <td>@Model.FirstName  @Model.LastName</td>

                        </tr>
                        <tr>
                            <td scope="col">Fotoğrafı:</td>
                            @if (Model.ImagePath == null)
                            {
                                <td>
                                    <p>Daha önce fotoğraf eklenmemiş</p>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <img name="ImagePath" src="/@Model.ImagePath" style="width:50px;height:50px;" />
                                </td>
                            }
                        </tr>
                        <tr>
                            <td scope="col">Oluşturulma Tarihi:</td>
                            <td>@Model.CreatedDate.ToShortDateString()</td>

                        </tr>
                        <tr>
                            <td scope="col">Durumu :</td>
                            <td>@GetEnumDescription.Description(Model.Status)</td
                        </tr>
                        <tr>
                            <td scope="col">Makaleleri : </td>
                            <td><a class="btn btn-outline-success" onclick="ViewComments(@Model.Id)" style="padding:7px">Görmek İçin Tıkla</a></td>
                        </tr>
                    </table>
                    <div class="col-md-12" style="margin-bottom:10px">
                        <a href="/Admin/Post/PostList" class="btn btn-outline-danger">Geri Dön </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
