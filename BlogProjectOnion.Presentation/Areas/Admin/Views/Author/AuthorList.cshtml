
@{
    ViewData["Title"] = "AuthorList";
}

@model List<ResultAuthorDTO>


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">YAZARLAR</h4>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yazar İşlemleri</div>
                    </div>
                    <div class="card-body">
                        <table class="table mt-4">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Yazar Ad Soyad : </th>
                                    <th scope="col">Durumu</th>
                                    <th scope="col">Detaylar</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.FirstName  @item.LastName</td>
                                        <td>@GetEnumDescription.Description(item.Status)</td>
                                        <td><a href="/Admin/Author/DetailAuthor/@item.Id" class="btn btn-outline-primary">Detaylar</a></td>
                                        <td><a href="/Admin/Author/DeleteAuthor/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Admin/Author/AddAuthor" class="btn btn-outline-primary">Yeni Yazar Girişi </a>
                        <a style="margin-left:10px" href="/Admin/Genre/DeletedListGenre" class="btn btn-outline-danger">Silinen Yazarlar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>