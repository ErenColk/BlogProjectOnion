@using BlogProjectOnion.Domain.Entities;

@{
    ViewData["Title"] = "HardDeleteAuthor";
}

@model Author

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">YAZAR SİLME BAŞARILI</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Silme İşlemi Başarıyla Tamamlandı</div>
                    </div>
                    <div class="card-body">
                        <p>Yazar başarıyla silindi.</p>
                        <p><strong>Silinen Yazar:</strong> @Model.FirstName  @Model.LastName</p>
                        <p><strong>Silme Tarihi:</strong> @DateTime.Now.ToShortDateString()</p>
                        <a href="/Admin/Author/AuthorList" class="btn btn-outline-success">Ana Sayfaya Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>