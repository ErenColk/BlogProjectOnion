
@{
    ViewData["Title"] = "DeletedListAuthor";
}

@model List<AuthorDetailVM>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">SİLİNEN YAZARLAR </h4>
        <div class="row">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yazar İşlemleri</div>
                    </div>
                    <div class="card-body">
                        <form asp-action="AddAgainGenre" method="post">
                            <table class="table mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">Yazar Adı</th>
                                        <th scope="col">Durumu</th>
                                        <th scope="col">Eklenme Zamanı</th>
                                        <th scope="col">Silinme Zamanı</th>
                                        <th scope="col">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.FirstName  @item.LastName</td>
                                            <td>@GetEnumDescription.Description(item.Status)</td>
                                            <td>@item.CreatedDate</td>
                                            <td>@item.DeletedDate</td>
                                            <td><a type="submit" href="/Admin/Author/AddAgainAuthor/@item.Id" class="btn btn-outline-success">Tekrar Ekle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/Author/AuthorList" class="btn btn-outline-primary mt-1">Listeye Geri Dön</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>