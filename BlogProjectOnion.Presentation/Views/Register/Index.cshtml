@model BlogProjectOnion.Application.Models.DTOs.CommentDTOs.RegisterAppUserDTO

@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<link href="~/css/styles.css" rel="stylesheet" />
<link href="/css/styles.css" rel="stylesheet" />
<link href="~/css/register.css" rel="stylesheet" />
<link href="~/css/comments.css" rel="stylesheet" />
<link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS-->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script src="~/assets/js/scripts.js"></script>
<script src="/js/site.js"></script>

<section class="vh-200 bg-image"
         style="background-image: url('/Ready-Bootstrap-Dashboard-master/assets/img/register.jpg');">
    <div class="mask d-flex align-items-left  gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-start align-items-start" style="margin-top:50px;margin-bottom:50px">
                <div class="col-10 col-md-9 col-lg-7 col-xl-6" style="height:auto;">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-1">           

                            <h2 class="text-uppercase text-center mb-5">
                                <i class="fas fa-cubes fa-2x " style="color: #ff6219;"></i>
                                KAYIT OL
                            </h2>

                            <form asp-action="Index" asp-controller="Register" method="post">
                                <div class="form-outline mb-2">
                                    <label class="form-label" for="form3Example1cg">Kullanıcı Adınız</label>
                                    <input type="text" asp-for="UserName" id="form3Example1cg" class="form-control form-control-lg" />
                                    <span asp-validation-for="UserName"></span>
                                </div>

                                <div class="form-outline mb-2">
                                    <label class="form-label" for="form3Example3cg">Mail Adresiniz</label>
                                    <input type="email" asp-for="Email" id="form3Example3cg" placeholder="Mail Adresi" class="form-control form-control-lg" />
                                    <span asp-validation-for="Email"></span>

                                </div>

                                <div class="form-outline mb-2">
                                    <label class="form-label" for="form3Example4cg">Parola</label>
                                    <input type="password" asp-for="Password" id="form3Example4cg" class="form-control form-control-lg" />
                                    <span asp-validation-for="Password"></span>

                                </div>

                                <div class="form-outline mb-2">
                                    <label class="form-label" for="form3Example4cdg">Parola Tekrarı</label>
                                    <input type="password" asp-for="ConfirmPassword" id="form3Example4cdg" class="form-control form-control-lg" />
                                    <span asp-validation-for="ConfirmPassword"></span>

                                </div>

                                <div class="form-outline mb-2">
                                    <label class="form-label" for="form3Example3cb">Seçim Kutusu</label>
                                    <select id="form3Example3cb" onchange="toggleAuthorFields()" asp-for="Role" class="form-select form-select-lg">
                                        <option value="" disabled selected>Seçiniz</option>
                                        <option value="1">YAZAR</option>
                                        <option value="2">ÜYE</option>
                                    </select>
                                    <span asp-validation-for="Role"></span>
                                </div>

                                <div id="authorFields" style="display:none">
                                    <div class="form-outline mb-2">
                                        <label class="form-label" for="form3ExampleFirstName">Adınız</label>
                                        <input type="text" asp-for="FirstName" id="form3ExampleFirstName" class="form-control form-control-lg" />
                                        <span asp-validation-for="FirstName"></span>
                                    </div>

                                    <div class="form-outline mb-2">
                                        <label class="form-label" for="form3ExampleLastName">Soyadınız</label>
                                        <input type="text" asp-for="LastName" id="form3ExampleLastName" class="form-control form-control-lg" />
                                        <span asp-validation-for="LastName"></span>
                                    </div>
                                </div>

                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="d-flex justify-content-center" style="margin:auto">

                                    <input type="submit" id="kayitButton" class="btn btn-outline-success gradient-custom-2 "  value="KAYIT" />
                                </div>
                                <p class="text-center text-muted mt-5 mb-0">
                                    Hazırda Bir Üyeliğiniz Var Mı? <a href="/Login/Index"
                                                                      class="fw-bold text-body"><u style="color:black">Giriş Yap</u></a>
                                </p>
                            </form>
                            <a class="go-to-home" href="/Home/Index">
                                <i class="fas fa-arrow-circle-up fa-1x"></i>
                                <span>Ana Sayfaya Git</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<style>
    .card {
        border-radius: 15px;
        background-color: #ffffff; /* Koyu arka plan rengi */
        opacity: 0.9; /* Saydamlık değeri (0 ile 1 arasında bir değer) */
        color: #212229;
        /* Metin rengi beyaz */
        padding: 15px; /* İsteğe bağlı: içeriği biraz içeri çekmek için bir iç kenarlık ekleyebilirsiniz */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* Yumuşak bir gölge efekti ekler */
      
    }


    .go-to-home {
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: white;
        color: black;
        padding: 10px;
        border-radius: 10px;
        cursor: pointer;
        display: flex;
        align-items: center;
        font-size: 15px
    }

        .go-to-home span {
            margin-left: 5px;
        }

    #kayitButton {
        border-radius: 10px;
        transition: background-color 0.5s ease-in-out, color 0.5s ease-in-out;
        margin-top:10px
    }
        #kayitButton:hover {
            cursor: pointer;
            background-color: #218838; /* Bitiş rengi */
            color: #fff; /* Bitiş yazı rengi */
        }

    }
</style>

<script>

    document.addEventListener('DOMContentLoaded', function () {
        toggleAuthorFields();
    });

    function toggleAuthorFields() {
        var roleSelect = document.getElementById('form3Example3cb');
        var authorFields = document.getElementById('authorFields');

        // Eğer "YAZAR" seçildiyse ilgili alanları görünür yap, aksi halde gizle
        if (roleSelect.value === '1') {
            authorFields.style.display = 'block';
        } else {
            authorFields.style.display = 'none';
        }
    }
</script>