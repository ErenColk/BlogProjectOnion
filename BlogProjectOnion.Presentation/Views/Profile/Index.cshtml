@using BlogProjectOnion.Application.Models.VMs.AuthorVMs;
@{
    ViewData["Title"] = "Index";
}

@model AuthorVM

<section class="h-100 gradient-custom-2">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-9 col-xl-8">
                <div class="card rounded-4 shadow-lg">
                    <!-- Add rounded-3 for rounded corners and shadow-lg for a shadow effect -->
                    <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
                        <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                            @if (Model.ImagePath == "" || Model.ImagePath == null)
                            {
                                //BURAYI DĞÜZELTY FOTO GELMİYOR
                                <img src="/images/profilFotoDefault.png" />

                            }
                            else
                            {
                                <img src="/@Model.ImagePath" />
                            }
                            alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                            style="width: 150px; z-index: 1">
                            <button type="button" class="btn btn-success" href="/Profile/AddFollow/@Model.Id" data-mdb-ripple-color="dark"
                                    style="z-index: 1;">
                                Takip Et
                            </button>
                        </div>
                        <div class="ms-2" style="margin-top: 80px;padding:10px ">
                            <h5>Andy Horwitz</h5>
                            <p>New York</p>
                        </div>
                    </div>
                    <div class="p-4 text-black" style="background-color: #f8f9fa;">
                        <div class="d-flex justify-content-end text-center py-1">
                            <div>
                                <p class="mb-1 h5">253</p>
                                <p class="small text-muted mb-0">Photos</p>
                            </div>
                            <div class="px-3">
                                <p class="mb-1 h5">1026</p>
                                <p class="small text-muted mb-0">Followers</p>
                            </div>
                            <div>
                                <p class="mb-1 h5">478</p>
                                <p class="small text-muted mb-0">Following</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4 text-black">
                        <div class="mb-5">
                            <p class="lead fw-normal mb-1">About</p>
                            <div class="p-4" style="background-color: #f8f9fa;">
                                <p class="font-italic mb-1">Web Developer</p>
                                <p class="font-italic mb-1">Lives in New York</p>
                                <p class="font-italic mb-0">Photographer</p>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0">Recent photos</p>
                            <p class="mb-0"><a href="#!" class="text-muted">Show all</a></p>
                        </div>
                        <div class="row g-2">
                            <div class="col mb-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/Lightbox/Original/img%20(112).webp"
                                     alt="image 1" class="w-100 rounded-3">
                            </div>
                            <div class="col mb-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/Lightbox/Original/img%20(107).webp"
                                     alt="image 1" class="w-100 rounded-3">
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="col">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/Lightbox/Original/img%20(108).webp"
                                     alt="image 1" class="w-100 rounded-3">
                            </div>
                            <div class="col">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/Lightbox/Original/img%20(114).webp"
                                     alt="image 1" class="w-100 rounded-3">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<style>

    .btn {
        border-radius: 25px; /* Ovalleştirmek için border-radius değerini ayarlayın */
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3); /* Gölgelik eklemek için box-shadow kullanın */
        transition: transform 0.3s, box-shadow 0.3s; /* Smooth geçiş için transition ekleyin */
    }

        .btn:hover {
            transform: scale(1.05); /* Üzerine gelindiğinde büyüklüğünü artırmak için transform kullanın */
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.5); /* Üzerine gelindiğinde daha belirgin bir gölgelik eklemek için box-shadow kullanın */
        }

    .container-py-5 {
        margin-top: 50px; /* İstediğiniz miktarı ayarlayabilirsiniz */
    }

    .gradient-custom-2 {
        /* fallback for old browsers */
        background: #4a4a4a;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(35, 0, 0, 1), rgba(28, 0, 0, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(24, 0, 0, 1), rgba(28, 0, 0, 1));
    }
</style>