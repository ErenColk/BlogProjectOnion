@using BlogProjectOnion.Application.Models.DTOs.MailDtos;

@model ConfirmMailDTO
@{
    ViewData["Title"] = "Index";
}



<section class="vh-50" style="background-color: #edeff2;" >
    <div class="container py-2 h-100">
        <div class="row d-flex justify-content-center align-items-center h-50">
            <div class="col col-xl-5">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-5">
                        <div class="col-md-6 col-lg-12 d-flex align-items-center justify-content-end" >
                            <div class="card-body p-4 p-lg-5 text-black" >
                                <form asp-action="Index">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="Email" />
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-envelope fa-5x" style="color: #ff6219; margin:auto;"></i>
                                    </div>
                                    <h5 class="fw-normal pb-2" style="letter-spacing: 1px; margin-left:100px;width:auto">@Model.Email </h5>
                                    <p class="mb-4 pb-2" style="color: #393f81;">
                                        Hesabınızı onaylamak için lütfen güvenlik şifrenizi girin.
                                        Onay kodu e-posta ile gönderilmiş olmalıdır.
                                    </p>
                                    <div class="form-outline mb-4">
                                        <input asp-for="ConfirmCode" type="text" placeholder="Onay Kodu" class="form-control form-control-lg" />
                                    </div>                                  
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="pt-1 mb-4">
                                        <input type="submit" class="btn btn-outline-success btn-lg btn-block"  value="Onayla" style="border-radius: 5px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); margin-left:300px;" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<style>
    .col-md-6 img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 1rem 0 0 1rem;
    }
</style>