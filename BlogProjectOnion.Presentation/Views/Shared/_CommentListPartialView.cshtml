

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<section class="content-item" id="comments">
	<div class="container">
		<div class="row">
			<div class="col-sm-10">
				<form>
					<h3 class="pull-left">Yeni Yorum</h3>
					<button type="submit" class="btn btn-success pull-right" style="margin-bottom : 10px">Gönder</button>
					<fieldset>
						<div class="row">
							<div class="col-sm-10 col-lg-2 col-xl-3">
								<img class="img-responsive" style="width:200px" src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="">
							</div>
							<div class="form-group col-xs-12 col-sm-9 col-lg-9">
								<textarea class="form-control" id="message" placeholder="Mesajın" required=""></textarea>
							</div>
						</div>
					</fieldset>
				</form>

				<h3>@Model.Comments.Count Yorum</h3>

				<!-- COMMENT 1 - START -->
				@foreach (var item in Model.Comments)
				{
					<div class="media">
						<a class="pull-left" href="#"><img class="media-object" src="@item.AppUser.ImagePath" alt=""></a>
						<div class="media-body">
							<h4 class="media-heading">@item.AppUser.Author.FirstName +  @item.AppUser.Author.LastName</h4>
							<p></p>
							<ul class="list-unstyled list-inline media-detail pull-left">
								<li><i class="fa fa-calendar"></i>@item.CreatedDate.ToShortDateString()</li>
								<li><i class="fa fa-thumbs-up"></i>0</li>
							</ul>
							<ul class="list-unstyled list-inline media-detail pull-right">
								<li class=""><a href="">Beğen</a></li>
							</ul>
						</div>
					</div>
				}
				<!-- COMMENT 1 - END -->
			</div>
		</div>
	</div>
</section>



